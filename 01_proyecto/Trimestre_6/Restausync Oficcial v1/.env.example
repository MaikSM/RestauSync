# Archivo de ejemplo de variables de entorno para Restausync
# Copia este archivo como .env y configura tus valores

# === CONFIGURACIÓN DEL SERVIDOR ===
API_PREFIX="/api/v1"
PORT=4001

# === CONFIGURACIÓN DE BASE DE DATOS ===
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_NAME=restausync

# === CONFIGURACIÓN DE SEGURIDAD ===
BCRYPT_SALT=10
JWT_SECRET="tu_clave_secreta_muy_segura_aqui"

# === CONFIGURACIÓN DE DESARROLLO ===
# Comandos útiles:
# npm run install:all    # Instalar dependencias
# npm run dev:backend    # Iniciar backend en desarrollo
# npm run dev:frontend   # Iniciar frontend en desarrollo
# npm run build          # Construir para producción